<h1>Welcome to Wikinimous</h1>

<% @articles.each do |article| %>
  <h3><%= link_to article.title, article_path(article) %></h3>
  <p><%= article.content %></p>
  <p><%= link_to "Edit", edit_article_path(article.id)%></p>
  <p> <%= link_to "Delete this article?", article_path(article.id), method: :delete, data: { confirm: "Are you sure?" } %></p>
  <hr>
<% end %>

<%= link_to "Add a new article", new_article_path %>
